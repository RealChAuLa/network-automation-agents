# Simulator Configuration
SIMULATOR_OUTPUT_DIR=./output
SIMULATOR_DEFAULT_INTERVAL=5
SIMULATOR_DEFAULT_NODE_COUNT=10

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# MCP Server Configuration
MCP_SERVER_NAME=network-automation-mcp
MCP_SERVER_VERSION=0.1.0
MCP_LOG_LEVEL=INFO

# LLM Configuration
LLM_PROVIDER=gemini
# Options: gemini, claude, openai, none (none = rule-based only)

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash
# Options: gemini-1.5-flash (fast, cheap), gemini-1.5-pro (better quality)

# Optional: Other LLM providers
# ANTHROPIC_API_KEY=your-claude-key
# OPENAI_API_KEY=your-openai-key
# OPENAI_MODEL=gpt-4o-mini

# Agent Configuration
AGENT_LOG_LEVEL=INFO
DISCOVERY_AGENT_INTERVAL_MINUTES=5
DISCOVERY_AGENT_ENABLED=true

# Redis Configuration (for future phases)
REDIS_URL=redis://localhost:6379

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_INTENTS=true
AUDIT_LOG_RESULTS=true
AUDIT_LOG_DENIALS=true

# Orchestrator Configuration
ORCHESTRATOR_INTERVAL=5
PIPELINE_USE_LLM=true
PIPELINE_VERIFY=true
PIPELINE_DRY_RUN=false
PIPELINE_MAX_ACTIONS=10

# Logging
LOG_LEVEL=INFO

# immudb Configuration (for Phase 2)
IMMUDB_HOST=localhost
IMMUDB_PORT=3322
IMMUDB_USER=immudb
IMMUDB_PASSWORD=immudb
IMMUDB_DATABASE=defaultdb